# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.{js,jsx,less}]
indent_size = 4

[*.json]
indent_size = 2
